<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/title_bg">
    <RelativeLayout
        android:id="@+id/message_title_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titile_bar_height"
        android:background="@drawable/title_bg">

        <TextView
            android:id="@+id/message_title_back_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/login_context_padding_length"
            android:textStyle="bold"
            android:text="返回"/>


        <RadioGroup
            android:id="@+id/message_title_tab_rg"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/message_title_tab_rb01"
                android:layout_width="0dp"
                android:layout_height="@dimen/titile_bar_height"
                android:layout_weight="1.0"
                android:checked="true"
                android:button="@null"
                android:gravity="center"
                android:padding="0dp"
                android:textColor="@color/colorGray"
                android:text="@string/message_title_tab_notic"
                android:background="@drawable/custom_title_radiobutton_selector"/>/>
            <RadioButton
                android:id="@+id/message_title_tab_rb02"
                android:layout_width="0dp"
                android:layout_height="@dimen/titile_bar_height"
                android:layout_weight="1.0"
                android:button="@null"
                android:gravity="center"
                android:padding="0dp"
                android:textColor="@color/colorGray"
                android:text="@string/message_title_tab_commect"
                android:background="@drawable/custom_title_radiobutton_selector"/>/>

        </RadioGroup>

    </RelativeLayout>



    <FrameLayout
        android:id="@+id/message_fl_context"
        android:layout_below="@id/message_title_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

</RelativeLayout>