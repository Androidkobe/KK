<?xml version="1.0" encoding="utf-8"?>
<!-- 这是热门吧列表项的布局文件，每一行长什么样子，修改这里 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:padding="5dip"
    android:paddingBottom="15dp"
    android:gravity="center" >


    <ImageView
        android:id="@+id/message_tab02_item_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/message_tab02_item_tv01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue_dark"
                android:textSize="20sp"
                android:layout_alignParentLeft="true"
                android:text="冯小刚" />

            <TextView
                android:id="@+id/message_tab02_item_timediff_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:padding="2dp"
                android:textSize="18sp"
                android:text="时间差" />
        </RelativeLayout>
        <!--
                <TextView
                    android:id="@+id/info"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:text="备注"/>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/message_tab02_item_tv02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/blue_light"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="评论：你好很高兴认识你！哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>